<!--body wrapper start-->
<div class="wrapper">
     <div class="row">
        <div class="col-sm-12">
            <section class="panel">
                <!-- <header class="panel-heading">
                    Editable Table
                    <span class="tools pull-right">
                        <a href="javascript:;" class="fa fa-chevron-up toggle-show"></a>
                        <a href="javascript:;" class="fa fa-times"></a>
                     </span>
                </header> -->
                <div class="panel-body">
                    <div class="adv-table editable-table ">
                        <div class="clearfix">
                            <div class="btn-group">
                                <button id="editable-sample_new" class="btn btn-primary">
                                    添加管理员 <i class="fa fa-plus"></i>
                                </button>
                            </div>
                            <!-- <div class="btn-group pull-right">
                                <button class="btn btn-default dropdown-toggle" data-toggle="dropdown">工具 <i class="fa fa-angle-down"></i>
                                </button>
                                <ul class="dropdown-menu pull-right">
                                    <li><a href="#">打印</a></li>
                                    <li><a href="#">导出Excel</a></li>
                                </ul>
                            </div> -->
                        </div>
                        <br>
                        <div class="space15"></div>
                        <table class="table table-striped table-hover table-bordered" id="editable-sample">
                        <thead>
                            <tr>
                                <th>帐号</th>
                                <th>姓名</th>
                                <th>密码</th>
                                <th>权限</th>
                                <th>创建日期</th>
                                <th>编辑</th>
                                <th>删除</th>
                            </tr>
                        </thead>
                            <tbody>
                                <% cache @admins.cache_key, expires_in: 1.hours do %>
                                    <% @admins.each do |admin| %>
                                        <tr class="">
                                            <td><%= admin.number %></td>
                                            <td><%= admin.name %></td>
                                            <td>********</td>
                                            <td><%= translate_role admin.role %></td>
                                            <td><%= admin.created_at.strftime('%Y-%m-%d %H:%M:%S') %></td>
                                            <td><a class="edit" href="javascript:;" data-id='<%= admin.id %>'>编辑</a></td>
                                            <td><a class="delete" href="javascript:;" data-id='<%= admin.id %>'>删除</a></td>
                                        </tr>
                                    <% end %>
                                <% end %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>
<!--body wrapper end-->

<!-- END JAVASCRIPTS -->
<script>
    jQuery(document).ready(function() {
        EditableTable.init();
    });
