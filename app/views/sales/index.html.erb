<!-- page heading start-->
<div class="page-heading">
    <h3>
        业务员管理
    </h3>
    <ul class="breadcrumb">
        <li>
            <a href="#">业务员列表</a>
        </li>
    </ul>
</div>
<!-- page heading end-->

<!--body wrapper start-->
<div class="wrapper">
     <div class="row">
        <div class="col-sm-12">
            <section class="panel">
                <!-- <header class="panel-heading">
                    Editable Table
                    <span class="tools pull-right">
                        <a href="javascript:;" class="fa fa-chevron-up toggle-show"></a>
                        <a href="javascript:;" class="fa fa-times"></a>
                     </span>
                </header> -->
                <div class="panel-body">
                    <div class="adv-table editable-table ">
                        <div class="clearfix">
                            <div class="btn-group">
                                <button id="editable-sample_new" class="btn btn-primary">
                                    添加业务员 <i class="fa fa-plus"></i>
                                </button>
                            </div>
                            <!-- <div class="btn-group pull-right">
                                <button class="btn btn-default dropdown-toggle" data-toggle="dropdown">工具 <i class="fa fa-angle-down"></i>
                                </button>
                                <ul class="dropdown-menu pull-right">
                                    <li><a href="#">打印</a></li>
                                    <li><a href="#">导出Excel</a></li>
                                </ul>
                            </div> -->
                        </div>
                        <br>
                        <div class="space15"></div>
                        <table class="table table-striped table-hover table-bordered" id="editable-sample">
                        <thead>
                            <tr>
                                <th>姓名</th>
                                <th>电话</th>
                                <th>性别</th>
                                <th>出生日期</th>
                                <th>入职时间</th>
                                <th>运单总数</th>
                                <th>编辑</th>
                                <th>删除</th>
                            </tr>
                        </thead>
                            <tbody>
                                <% @sales.each do |sale| %>
                                    <tr class="">
                                        <td><%= link_to sale.name, sale %></td>
                                        <td><%= sale.tel %></td>
                                        <td><%= sale.gender %></td>
                                        <td><%= sale.age %></td>
                                        <td><%= sale.join_time %></td>
                                        <td><%= link_to sale.orders_count, orders_path(sale_id: sale.id)  %></td>
                                        <td><a class="edit" href="javascript:;" data-id='<%= sale.id %>'>编辑</a></td>
                                        <td><a class="delete" href="javascript:;" data-id='<%= sale.id %>'>删除</a></td>
                                    </tr>
                                <% end %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>
<!--body wrapper end-->

<!-- END JAVASCRIPTS -->
<script>
    jQuery(document).ready(function() {
        EditableTable.init();
    });
</script>
