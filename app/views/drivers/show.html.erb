<div class="page-heading">
  <ul class="breadcrumb">
    <li>
      <a href="/drivers">司机管理</a>
    </li>
    <li class="active">
      <a href="">详细信息</a>
    </li>
    <li class="pull-right flex">
    </li>
  </ul>
</div>

<div class="wrapper order-detail">
  <div class="row">
    <div class="col-md-12">
      <div class="panel">
        <div class="panel-heading">
          司机详情
        </div>
        <div class="panel-body">
          <ul class="p-info o-info">
            <li>
              <div class="title">姓名</div>
              <div class="desk"><%= @driver.name %></div>
            </li>
            <li>
              <div class="title">电话</div>
              <div class="desk"><%= @driver.tel %></div>
            </li>
            <li>
              <div class="title">性别</div>
              <div class="desk"><%= @driver.gender %></div>
            </li>
            <li>
              <div class="title">出生年月</div>
              <div class="desk"><%= @driver.age %></div>
            </li>
            <li>
              <div class="title">入职时间</div>
              <div class="desk"><%= @driver.join_time %></div>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <div class="panel">
        <div class="panel-heading">
          订单列表
        </div>
        <div class="panel-body">
          <%= render "/orders/list" %>
          <%= paginate @orders %>
        </div>
      </div>
    </div>
  </div>
</div>
