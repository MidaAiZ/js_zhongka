<section>
  <!-- left side start-->
  <div class="left-side sticky-left-side">

    <!--logo and iconic logo start-->
    <div class="logo">
      <a href="/"><img src="/assets/manage/logo.png" alt=""></a>
    </div>

    <div class="logo-icon text-center">
      <a href="/"><img src="/assets/manage/logo_icon.png" alt=""></a>
    </div>
    <!--logo and iconic logo end-->

    <div class="left-side-inner">

      <!-- visible to small devices only -->
      <div class="visible-xs hidden-sm hidden-md hidden-lg">
        <div class="media logged-user admin">
          <%= image_tag @admin.avatar_url, class: "media-object admin-avatar" %>
          <div class="nav-u-info">
            <h5>
              <a href="/profile"><%= @admin.number %></a>
            </h5>
            <span><%= translate_role @admin.role %></span>
          </div>
        </div>

        <ul class="nav nav-pills nav-stacked custom-nav">
          <li>
            <%= link_to profile_path do %>
            <i class="fa fa-user"></i>
            <span>个人中心</span>
          <% end %>
        </li>
        <!-- <li> <a href="#"><i class="fa fa-cog"></i> <span>Settings</span></a> </li> -->
        <li>
          <%= link_to logout_path, method: :post do %>
          <i class="fa fa-sign-out"></i>
          <span>退出</span>
        <% end %>
      </li>
    </ul>
  </div>

  <!--sidebar nav start-->
  <ul class="nav nav-pills nav-stacked custom-nav">
    <li class='<%= 'active' if params[:controller] == 'main' %>'>
      <a href="/">
        <i class="fa fa-home"></i>
        <span>系统首页</span>
      </a>
    </li>

    <li class="menu-list <%= check_cur_ctrl ['car_heads', 'car_bodies'] %>">
      <a href="">
        <i class="glyphicon glyphicon-screenshot"></i>
        <span>车辆管理</span>
      </a>
      <ul class="sub-menu-list">
        <li>
          <a href="/car_heads">车头设置</a>
        </li>
        <li>
          <a href="/car_bodies">挂车设置</a>
        </li>
      </ul>
    </li>

    <li class="menu-list <%= check_cur_ctrl ['schedules'] %>">
      <a href="">
        <i class="glyphicon glyphicon-time"></i>
        <span>计划管理</span>
      </a>
      <ul class="sub-menu-list">
        <li>
          <a href="/schedules">全部计划</a>
        </li>
        <li>
          <a href="/schedules?states[]=0&states[]=1&states[]=3">未执行计划</a>
        </li>
        <li>
          <a href="/schedules?states[]=2">已执行计划</a>
        </li>
      </ul>
    </li>



    <li class="menu-list <%= check_cur_ctrl ['orders', 'order_refund_records'] %>">
      <a href="">
        <i class="glyphicon glyphicon-shopping-cart"></i>
        <span>订单管理</span>
      </a>
      <ul class="sub-menu-list">
        <li>
          <a href="/orders">全部订单</a>
        </li>
        <li>
          <a href="/orders?state_=onprogress&states[]=onpaying1&states[]=onloading&states[]=ondelivering&states[]=arrived&states[]=onpaying2">进行中的订单</a>
        </li>
        <li>
          <a href="/orders?states[]=completed">已完成订单</a>
        </li>
      </ul>
    </li>

    <li class="menu-list <%= check_cur_ctrl ['drivers', 'salers'] %>">
      <a href="">
        <i class="fa fa-user"></i>
        <span>用户管理</span>
      </a>
      <ul class="sub-menu-list">
        <li>
          <a href="/drivers">司机管理</a>
        </li>
        <li>
          <a href="/sales">业务员管理</a>
        </li>
      </ul>
    </li>
    <li class="menu-list <%= check_cur_ctrl ['admins'] %>">
      <a href="">
        <i class="fa fa-cog"></i>
        <span>系统设置</span>
      </a>
      <ul class="sub-menu-list">
        <li>
          <a href="/admins">管理员设置</a>
        </li>
      </ul>
    </li>
  </ul>
  <!--sidebar nav end-->

</div>
</div>
</section>

<!-- left side end-->

<!-- main content start-->
<div class="main-content">

<!-- header section start-->
<div class="header-section">

  <!--toggle button start-->
  <a class="toggle-btn">
    <i class="fa fa-bars"></i>
  </a>
  <!--toggle button end-->

  <!--search start-->
  <!-- <form class="searchform" action="/" method="post"> <input type="text" class="form-control" name="keyword" placeholder="Search here..." /> </form> -->
  <!--search end-->

